<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:orientation="vertical"
    tools:context="com.example.cora.sportverwaltungveranstalter.activity.account.LoginActivity">


    <Button
        android:id="@+id/button_settings"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/ic_settings" />

    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/desc_logo"
        app:srcCompat="@drawable/ic_logo" />

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/input_rounded"
        android:drawableStart="@drawable/ic_account_circle_black_24dp"
        android:ems="10"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:textColor="@color/text_dark"
        android:textColorHighlight="@color/text_medium" />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_rounded"
        android:drawableStart="@drawable/ic_fingerprint_black_24dp"
        android:ems="10"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:textColor="@color/text_dark"
        android:textColorHint="@color/text_medium" />

    <Button
        android:id="@+id/button_forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:text="@string/text_forgot_password"
        android:textAlignment="textEnd"
        android:textColor="@color/text_light"
        android:textSize="10sp" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_rounded"
        android:text="@string/text_button_login" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_rounded"
        android:text="@string/text_not_registered_yet" />


</LinearLayout>
